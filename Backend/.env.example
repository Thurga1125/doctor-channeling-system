# MongoDB Configuration
# For local development without Docker
SPRING_DATA_MONGODB_URI=mongodb://localhost:27017/doctor_channeling

# For Docker development (use this when running with docker-compose)
# SPRING_DATA_MONGODB_URI=mongodb://admin:adminpass@mongodb:27017/doctor_channeling?authSource=admin

# Auto-create MongoDB indexes
SPRING_DATA_MONGODB_AUTO_INDEX_CREATION=true

# Server Configuration
SERVER_PORT=8080

# Application Name
SPRING_APPLICATION_NAME=doctor-channeling

# Logging Levels
LOGGING_LEVEL_COM_DOCTORCHANNEL=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_DATA_MONGODB=DEBUG
